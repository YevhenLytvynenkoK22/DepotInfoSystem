<Window x:Class="DepotInfoSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepotInfoSystem"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Depot Management" Height="450" Width="800" Icon="/train.png">
    <Window.Resources>
        <DataTemplate x:Key="EmployeeTemplate">
            <Border BorderBrush="Gray" 
                      BorderThickness="1" 
                      CornerRadius="5"
                      Padding="10"
                      Margin="5"
                      Background="White">
                <StackPanel Orientation="Horizontal" Margin="10">

                    <Image Width="200" 
                             Height="200" 
                             Margin="0,0,0,10"
                             Source="{Binding PhotoImage}"/>
                    <StackPanel Orientation="Vertical">
                        <Label Content="Surname" 
                                 FontWeight="Bold"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Surname}"
                                   Margin="0,2,0,5"
                                   FontSize="14"
                                   Background="WhiteSmoke"/>
                        <Label Content="Name" 
                                 FontWeight="Bold"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Name}"
                                   Margin="0,2,0,5"
                                   FontSize="14"
                                   Background="WhiteSmoke"/>
                        <Label Content="Patronymic" 
                                 FontWeight="Bold"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Patronymic}"
                                   Margin="0,2,0,5"
                                   FontSize="14"
                                   Background="WhiteSmoke"/>
                        <Label Content="Speciality" 
                                 FontWeight="Bold"
                                 Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Speciality}"
                                   Margin="0,2,0,5"
                                   FontSize="14"
                                   Background="WhiteSmoke"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="TrainTemplate">
            <Border BorderBrush="DarkGray" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="10"
                    Margin="5"
                    Background="White">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Image Width="200" 
                           Height="200" 
                           Margin="0,0,0,10"
                           Source="{Binding PhotoImage}"/>
                    <StackPanel Orientation="Vertical">
                        <Label Content="Model" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Model}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>
                        <Label Content="Number" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Number}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>
                        <Label Content="Manufacture Year" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding ManufactureYear}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>
                        <Label Content="Mileage (km)" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Mileage}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>
                        <Label Content="Status" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding CurrentStatus}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="WarehouseTemplate">
            <Border BorderBrush="DarkGray" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="10"
                Margin="5"
                Background="White">
                <StackPanel Orientation="Horizontal" Margin="10">

                    <StackPanel Orientation="Vertical">
                        <Label Content="Warehouse Name" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Name}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>

                        <Label Content="Quantity (pcs)" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Count}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>

                        <Label Content="Price (UAH)" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding Price}" Margin="0,2,0,5" FontSize="14" Background="WhiteSmoke"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="RoleTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="8" Margin="4" Height="200">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="{Binding Description}" FontStyle="Italic" FontSize="12" Foreground="Gray"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Permissions:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        <ItemsControl ItemsSource="{Binding PermissionSet}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightGray" Padding="2" Margin="2" CornerRadius="3">
                                        <TextBlock Text="{Binding}" FontSize="11"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="UserTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="8" Margin="4">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Login}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Password hidden" FontStyle="Italic" FontSize="12" Foreground="Gray" />

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Role ID:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding RoleID}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="RepairTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="4" CornerRadius="4">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding id}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Train: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Train.Model}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Type: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Type.Name}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Date: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Date}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Status: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Status}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="User: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding User.Login}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <TextBlock Text="Description:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <local:EntityTemplateSelector x:Key="MyTemplateSelector"
                              EmployeeTemplate="{StaticResource EmployeeTemplate}"
                              TrainTemplate="{StaticResource TrainTemplate}" 
                              WarehouseTemplate="{StaticResource WarehouseTemplate}"
                              UserTemplate="{StaticResource UserTemplate}"
                              RepairTemplate="{StaticResource RepairTemplate}"/>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F7F7F7"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B22222"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#7F0000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#DDD"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#FFF9FAFB" Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#B22222" Padding="10" >
            <TextBlock Text="DepotSystem" Foreground="White" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Background="White" BorderBrush="#B22222" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,10,10,10" >
            <StackPanel x:Name="sp_nav" >
                <Button Content="Locomotives" Tag="Trains" Click="Button_Table_Type_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Employees" Tag="Employee" Click="Button_Table_Type_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Repairs" Tag="Repairs" Click="Button_Table_Type_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Warehouse" Tag="Warehouse" Click="Button_Table_Type_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Roles" Tag="Roles" Click="Button_Table_Type_Click" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Users" Tag="Users" Click="Button_Table_Type_Click" Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Background="White" BorderBrush="#B22222" BorderThickness="1" CornerRadius="8" Padding="10" Margin="0,10,10,10" >
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="White" />
        </Border>

        <Grid.Resources>
            <Style x:Key="NavButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#F7F7F7"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,5,0,5"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B22222"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#7F0000"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#DDD"/>
                                    <Setter Property="Foreground" Value="#999"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
    </Grid>

</Window>