<Window x:Class="DepotInfoSystem.Froms.RepairWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepotInfoSystem.Froms"
        xmlns:viewModels="clr-namespace:DepotInfoSystem.ViewModels" mc:Ignorable="d"
        Title="Create/Edit Repair" Height="994" Width="720"
        FontFamily="Segoe UI" Background="#FFF9FAFB"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance viewModels:RepairViewModel}">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#B22222"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="AccentColor" Color="#F5F5F5"/>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>


                <Label Content="Train:"/>
                <ComboBox ItemsSource="{Binding AvailableTrains}" 
                          DisplayMemberPath="FullInfo" 
                          SelectedValuePath="id"
                          SelectedValue="{Binding SelectedTrainId}"/>

                <Label Content="Repair Type:"/>
                <ComboBox ItemsSource="{Binding AvailableRepairTypes}" 
                          DisplayMemberPath="Name" 
                          SelectedValuePath="id"
                          SelectedValue="{Binding SelectedRepairTypeId}"/>

                <Separator Margin="0,15"/>

                <TextBlock Text="Brigade" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="In Brigade" HorizontalAlignment="Center"/>
                        <ListBox x:Name="InBrigadeListBox"
                                 ItemsSource="{Binding EmployeesInBrigade}" 
                                 Width="200" Height="150" 
                                 DisplayMemberPath="FullName" SelectionMode="Extended"/>
                    </StackPanel>
                    <StackPanel Margin="10,0" VerticalAlignment="Center">
                        <Button Content="&gt;" Width="40" Command="{Binding RemoveFromBrigadeCommand}"
        CommandParameter="{Binding ElementName=InBrigadeListBox, Path=SelectedItems}"/>
                        <Button Content="&lt;" Width="40" Command="{Binding AddToBrigadeCommand}"
        CommandParameter="{Binding ElementName=NotInBrigadeListBox, Path=SelectedItems}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Not in Brigade" HorizontalAlignment="Center"/>
                        <ListBox x:Name="NotInBrigadeListBox"
                                 ItemsSource="{Binding EmployeesNotInBrigade}" 
                                 Width="200" Height="150" 
                                 DisplayMemberPath="FullName" SelectionMode="Extended"/>
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,15"/>

                <Label Content="User:"/>
                <ComboBox ItemsSource="{Binding AvailableUsers}" 
                          DisplayMemberPath="Login" 
                          SelectedValuePath="id"
                          SelectedValue="{Binding SelectedUserId}"/>

                <Label Content="Date:"/>
                <DatePicker SelectedDate="{Binding RepairDate}"/>

                <Label Content="Description:"/>
                <TextBox Text="{Binding RepairDescription, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>

                <Label Content="Status:"/>
                <ComboBox SelectedItem="{Binding RepairStatus}">
                    <ComboBoxItem Content="In Progress"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Cancelled"/>
                    <ComboBoxItem Content="Pending Approval"/>
                    <ComboBoxItem Content="Approved"/>
                    <ComboBoxItem Content="Rejected"/>
                    <ComboBoxItem Content="Under Review"/>
                    <ComboBoxItem Content="Done"/>
                    <ComboBoxItem Content="Postponed"/>
                    <ComboBoxItem Content="Resumed"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="120" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="120" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>